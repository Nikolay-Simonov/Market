@model IEnumerable<CountryVM>

@{
    ViewData["Title"] = "Countries";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="form-inline text-left">
    <form asp-action="List" method="get">
        <div class="form-group">
            <input type="submit" value="Filter" class="btn btn-default" />
        </div>
        <div class="form-group">
            <input Name="Name" Id="Name" class="form-control" />
        </div>
    </form>
</div>
<hr />
<ul class="list-group">
    @foreach (var country in Model)
    {
        <li class="list-group-item" data-id="@country.Id">
            @country.Name
            <span class="btn-group btn-group-xs" style="float: right">
                <a asp-action="Edit" asp-route-id="@country.Id" class="btn btn-default">Edit</a>
                <button type="button" class="btn btn-danger"
                        onclick="deleteItem(@country.Id, '@Url.Action("Delete")', event)">
                    Delete
                </button>
            </span>
        </li>
    }
</ul>

@{ await Html.RenderPartialAsync("_GeneralFunctionsPartial"); }

@section Sweetalert {
    @{ await Html.RenderPartialAsync("_SweetalertPartial"); }
}