@model IEnumerable<StaffDataVM>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirtsName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiddelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr data-id="@item.Id">
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirtsName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
                <span class="btn-group btn-group-xs" style="float: right">
                    <a asp-action="EditEmployee" asp-route-id="@item.Id" class="btn btn-default">Edit</a>
                    <button type="button" class="btn btn-default"
                            onclick="resetPassword('@item.Id', event)">
                        Password
                    </button>
                    <button type="button" class="btn btn-danger"
                            onclick="deleteEmployee('@item.Id', '@Url.Action("Delete")', event)">
                        Delete
                    </button>
                </span>
            </td>
        </tr>
}
    </tbody>
</table>